<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ListView
        android:id="@+id/lvPedidos"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/design_default_color_on_secondary"
        android:divider="@color/colorPrimaryDark"
        android:listSelector="@color/colorPrimaryDark"
        android:textColor="#000000"></ListView>



        <TextView
            android:id="@+id/tvtmensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="No hay pedidos para despachar"
            android:textColor="#CF0303"
            android:textSize="20sp"></TextView>
    </LinearLayout>




