<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalizarCompraFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="#F60202"
                android:gravity="center_horizontal|center_vertical"
                android:text="SELECCIONAR FECHA Y HORA ENTREGA"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtFechaEntrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:hint="Seleccione Fecha de Entrega">
            </EditText>

            <EditText
                android:id="@+id/edtHoraEntrega"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:gravity="center"
                android:layout_marginTop="7dp"
                android:hint="Seleccione Hora de Entrega">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="#F60202"
                android:gravity="center_horizontal|center_vertical"
                android:text="SELECCIONAR DIRECCION ENVIO"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spDireccionEnvio"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:background="#F60202"
                android:gravity="center_horizontal|center_vertical"
                android:text="SELECCIONAR FORMA DE PAGO"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rdbGroup"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </RadioGroup>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/credit2"></ImageView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnFinalizarCompra"
        android:layout_alignParentBottom="true"
        android:text="Finalizar Compra"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="60dp"
        android:background="#F60202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Button>
</RelativeLayout>