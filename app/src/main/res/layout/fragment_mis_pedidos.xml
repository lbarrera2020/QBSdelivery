<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTituloPedidos"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#D30206F6"
        android:gravity="center_horizontal|center_vertical"
        android:text="PEDIDOS"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvPedidos"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/design_default_color_on_secondary"
        android:divider="@color/colorPrimaryDark"
        android:listSelector="@color/colorPrimaryDark"
        android:textColor="#000000"></ListView>
</LinearLayout>