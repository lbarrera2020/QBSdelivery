<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTituloPedidos"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#D30206F6"
        android:gravity="center_horizontal|center_vertical"
        android:text="ESTADO PEDIDO"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rdoPedidoRecibido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:paddingTop="50dp"
                android:paddingBottom="30dp"
                android:textSize="20dp"
                android:text="Pedido Recibido" />

            <RadioButton
                android:id="@+id/rdoPreparacionPedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:textSize="20dp"
                android:text="Preparacion de pedido" />

            <RadioButton
                android:id="@+id/rdoEnRuta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:textSize="20dp"
                android:text="En ruta" />

            <RadioButton
                android:id="@+id/rdoPedidoEntregado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:textSize="20dp"
                android:text="Pedido Entregado" />
        </LinearLayout>

    </LinearLayout>

    <!--ListView
        android:id="@+id/lvEstadoPedido"
        style="@style/Widget.AppCompat.ListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@color/design_default_color_on_secondary"
        android:divider="@color/colorPrimaryDark"
        android:textColor="#000000"></ListView-->
</LinearLayout>